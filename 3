import kotlin.random.Random

fun main() {
    val answers = arrayOf(
        "Бесспорно",
        "Предрешено",
        "Никаких сомнений",
        "Определённо да",
        "Можешь быть уверен в этом",
        "Мне кажется — да",
        "Вероятнее всего",
        "Хорошие перспективы",
        "Знаки говорят — да",
        "Да",
        "Пока не ясно, попробуй снова",
        "Спроси позже",
        "Лучше не рассказывать",
        "Сейчас нельзя предсказать",
        "Сконцентрируйся и спроси опять",
        "Даже не думай",
        "Мой ответ — нет",
        "По моим данным — нет",
        "Перспективы не очень хорошие",
        "Весьма сомнительно"
    )

    println("Привет! Я магический шар. Я знаю ответ на любой твой вопрос.")
    println("Задай мне вопрос и я дам тебе ответ. Для выхода введи 'Выход'.")
    println()

    while (true) {
        print("Задай вопрос: ")
        val question = readLine() ?: ""
        
        if (question.equals("Выход", ignoreCase = true)) {
            break
        }

        val randomIndex = Random.nextInt(answers.size)
        val answer = answers[randomIndex]

        println("Магический шар говорит: $answer")
        println()
    }

    println("Спасибо, что играли с магическим шаром!")
}
